{layout '../parts/@layout.latte'}

{block title}
	Home
{/block}

{block content}
	<div class="container">
		<div class="row d-flex justify-content-center">
			<div class="col-10 d-flex justify-content-start flex-wrap">
				{foreach $products as $product}
					<article class="col-lg-3 col-md-4 col-sm-6 col-xs-12 mb-4">
						<a href="#" class="text-dark" style="text-decoration:none;">
							<div class="shadow p-2 bg-white rounded">
								<div>
									<img src="{$product->image}" alt="product image" class="img-thumbnail">
								</div>

								<div class="text-center mt-3 mb-3">
									<h3 class="h6">{$product->name}</h3>
								</div>

								<div class="text-center">
									{$product->price} â‚¬
								</div>
							</div>
						</a>
					</article>
				{/foreach}
			</div>
		</div>
	</div>
{/block}