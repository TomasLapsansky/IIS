{layout '../parts/@layout.latte'}

{block title}
	Cart
{/block}

{block content}
	<div class="container-fluid content">
		{ifset $products}
			{form summaryForm}
				{foreach $products as $id => [$product, $count]}
					<div class="row border-bottom pb-2 pt-2 border-dark">
						<div class="col-2 offset-2 pl-0 d-flex align-items-center">
							<img src="{$product->image}" alt="product image" class="img-thumbnail" width="100">
						</div>
						<div class="col-2 d-flex align-items-center">
							{$product->name}
						</div>
						<div class="col-2 d-flex align-items-center">
							<p><input type=number name="{$id}" value={$count}> x {$product->price} â‚¬</p>
						</div>
						<div class="col-2 d-flex justify-content-end pr-0 align-items-center">
							<a n:href="delete! $product->id"><i class="material-icons" style="color:hsl(0, 100%, 30%);">delete</i></a>
						</div>
					</div>
				{/foreach}
				<div class="row mt-3">
					<div class="col-8 pr-0 offset-2 d-flex justify-content-end">
						{input summary}
					</div>
				</div>
			{/form}
		{else}
			<div class="row">
				<div class="col-8 offset-2 pl-0">
					<b>Kosik je prazdny.</b>
				</div>
			</div>
		{/ifset}
	</div>
{/block}