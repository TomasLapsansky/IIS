{layout '../parts/@layout.latte'}

{block title}
	Your orders
{/block}

{block content}
	<div class="container content">
		<div class="row d-flex justify-content-center">
			<div class="col-10 d-flex justify-content-center">
				<span class="h4">Your orders</span>
			</div>
			<div class="col-10 d-flex justify-content-start flex-wrap">
                <table class="table table-bordered table-hover">
                    <thead class="thead-dark">
                    <tr>
						<th scope="col">#</th>
                        <th scope="col">Status</th>
                        <th scope="col">Price</th>
                    </tr>
                    </thead>
                    <tbody>
                    {ifset $orders}
                        <tr n:foreach="$orders as $order">
							<th scope="row"><a href="/order/detail/{$order->id}">{$order->id}</a></th>
                            <td>{$order->status}</td>
							<td>{$orderDrugService->getPrice($order->id)} â‚¬</td>
                        </tr>
                    {else}
                        <tr>
                            <td>orders not found</td> {*TODO whole line*}
                        </tr>
                    {/ifset}
                    </tbody>
                </table>
			</div>
		</div>
	</div>
{/block}