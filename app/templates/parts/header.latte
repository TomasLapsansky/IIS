{foreach $flashes as $flash}
    <div class="alert alert-danger flash {$flash->type}" role="alert">
        {$flash->message}
    </div>
{/foreach}

<header>
	<div class="container-fluid">
		<div class="row">
			<a href="/admin"><i class="material-icons" style="color:black;">dehaze</i></a>
		</div>
	</div>
	<div class="container-fluid">
		<div class="row">
			<div class="col-4">
				<h1>SpeciLogo</h1>
			</div>
			<div class="col-4 offset-4 d-flex justify-content-end">
				{if $user->isLoggedIn()}
